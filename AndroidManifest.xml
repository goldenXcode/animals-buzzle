<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ferus.tigris.buzzle"
    android:versionCode="8"
    android:installLocation="auto" 
    android:versionName="1.7.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme="@style/AppTheme" android:logo="@drawable/ic_launcher" android:name="AnimalsBuzzle">
        <activity android:name="Splash"
            android:theme="@style/Theme.Transparent" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameFieldActivity" android:label="@string/title_activity_freeman_field" android:icon="@drawable/ic_launcher" android:logo="@drawable/ic_launcher" android:description="@string/title_activity_freeman_field" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>